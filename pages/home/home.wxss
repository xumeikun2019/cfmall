}

view, scroll-view {
  padding: 0px;
  margin: 0px;
}

.weui-navbar {
  width: 100%;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  white-space: nowrap;
  z-index: 100;
  background: white;
}

.rec {
  width: 100%;
  height: 7%;
}

.weui-navbar .default-item {
  /*width:25%;*/
  text-align: center;
  box-sizing: border-box;
  height: 8.5vh;
  padding-top: 2.5vh;
  font-size: 12px;
  display: inline-block;
  width: 20%;
  color: #666;
}

.weui-navbar .item_on {
  color: #dd2727;
  border-bottom: 5rpx solid #dd2727;
}

.weui-navbar-slider {
  position: absolute;
  height: 2px;
  content: "";
  bottom: 0px;
  left: 12.5rpx;
  transition: transform 0.3s;
}

.swiper-box {
  border-bottom: 1px solid #d1d1d1;
}

.swiper {
  height: 50vh;
}

.swiper-box .swiper-item {
  text-align: center;
  padding-top: 200rpx;
  overflow: hidden;
}

.fixed {
  position: fixed;
  z-index: 100;
  top: 0;
  width: 100%;
}

.stepper {
  display: none;
}

.steppershow {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  z-index: 999;
  top: 200rpx;
  left: 75%;
}

.steppershow text {
  background-color: #f2f2f2;
  margin: 5px 0;
  width: 26px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-weight: 900;
  color: #939393;
  border-radius: 6rpx;
  border: 1px solid #fff;
  /*border-left:1px solid #fff ;*/
}

.steppershow input {
  width: 43px;
  height: 25px;
  text-align: center;
  /*background-color: #f2f2f2;*/
  border-radius: 6rpx;
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}

#loading {
  position: fixed;
  top: 800px;
  z-index: 1;
}
